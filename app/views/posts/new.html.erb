
<h1>add new post</h1>
<%= form_for @post do |var| %>
	<p>
		<%= var.label :title %><br />
		<%= var.text_field :title %><br />
	</p>
	<p>
		<%= var.label :body %><br />
		<%= var.text_area :body %><br />
	</p>
	<p>
		<%= var.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "select one"} %><br />
	</p>
	<p>
		<%= var.submit "Add post" %>
	</p>
<% end %>
